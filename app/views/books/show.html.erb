<head>
  <script src="https://kit.fontawesome.com/076ca8d248.js" crossorigin="anonymous"></script>
</head>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary">
          <i class="fa-solid fa-user-gear"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
          <label for="book_body">Body</label>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" date-disable-with="Create Book">
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= image_tag 'no_image.jpg' %>
                <%= link_to user_path(@books.user) do %>
                    <%= @books.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(@books.id) do %>
                    <%= @books.title %>
                  <% end %>
              </td>
              <td><%= @books.body %></td>
              <td></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
