<script src="https://kit.fontawesome.com/076ca8d248.js" crossorigin="anonymous"></script>
  <div class="col-md-3">
    <h2>User info</h2>

    <table class="table">
      <tbody>
        <%= image_tag user.get_profile_image(100,100) %>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to  edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title">
      </div>
      <div class="form-group">
        <label for="book_body">Body</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" date-disable-with="Create Book">
      </div>
    <% end %>
  </div>

