<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/user', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag 'no_image.jpg' %></td>
              <td>
                  <%= link_to book_path(@book) do %>
                    <%= @book.title %>
                  <% end %>
              </td>
              <td><%= @book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>